{
  "compilerOptions": {
    "target": "esnext", // or "es2017" or higher, as needed
    "module": "esnext", // or other appropriate module setting like "commonjs"
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ], // or other appropriate libs
    "allowJs": true, // only if you have JavaScript files to compile
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "*"
      ],
      "@/app/*": [
        "./app/*"
      ]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // or "react" if using React JSX
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "types/custom.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
